<div class="card row-col-1" style="padding: 30px; margin: 10px 100px">
    {{#each beersFromApi}}
        <img class="card-img-top" src="{{image_url}}" alt="Beer {{this.name}}" />
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.tagline}}</p>
            <p class="card-text">Food pairing:</p>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p class="card-text">Brewer tips:</p>
            <p class="card-text">{{this.brewers_tips}}</p>

        </div>
    {{/each}}
</div>